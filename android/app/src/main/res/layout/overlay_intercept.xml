<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A1628"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="32dp">

        <!-- Anchor circle -->
        <FrameLayout
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/bg_anchor_circle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="⚓"
                android:textSize="40sp" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.15"
            android:text="HOLD ON."
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.6"
            android:textColor="#CCFFFFFF"
            android:textSize="15sp" />

        <!-- Pause card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_pause_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take a breath."
                android:textColor="#7EC8C8"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.6"
                android:text="The urge is temporary. You are stronger\nthan this moment. Let it pass."
                android:textColor="#B3FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Reflect button -->
        <Button
            android:id="@+id/btn_reflect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#7EC8C8"
            android:letterSpacing="0.1"
            android:text="REFLECT ON THIS MOMENT"
            android:textColor="#0A1628"
            android:textSize="13sp" />

        <!-- Stay anchored button -->
        <Button
            android:id="@+id/btn_stay_anchored"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#1AFFFFFF"
            android:letterSpacing="0.1"
            android:text="I'M STAYING ANCHORED"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <!-- Get Support — always free, never gated -->
        <Button
            android:id="@+id/btn_sos"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:drawableStart="@android:drawable/ic_dialog_alert"
            android:drawablePadding="6dp"
            android:letterSpacing="0.05"
            android:text="Get Support"
            android:textColor="#FFAAAA"
            android:textSize="13sp" />

    </LinearLayout>
</ScrollView>

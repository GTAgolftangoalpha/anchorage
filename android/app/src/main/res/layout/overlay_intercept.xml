<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D2B45"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ══ PHASE 1: Emotion selector ══════════════════════════════════ -->
        <LinearLayout
            android:id="@+id/phase_emotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="28dp"
            android:paddingTop="40dp"
            android:paddingBottom="32dp"
            android:visibility="visible">

            <!-- Anchor circle -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_anchor_circle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="⚓"
                    android:textSize="34sp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:text="HOLD ON."
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.4"
                android:textColor="#CCFFFFFF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="How are you feeling right now?"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp" />

            <!-- 2x5 Emotion grid -->
            <GridLayout
                android:id="@+id/grid_emotions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="2"
                android:rowCount="5"
                android:useDefaultMargins="false">

                <!-- Row 1 -->
                <TextView
                    android:id="@+id/emo_bored"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Bored"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/emo_stressed"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Stressed"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp" />

                <!-- Row 2 -->
                <TextView
                    android:id="@+id/emo_lonely"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Lonely"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/emo_tired"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Tired"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp" />

                <!-- Row 3 -->
                <TextView
                    android:id="@+id/emo_anxious"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Anxious"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/emo_down"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Down"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp" />

                <!-- Row 4 -->
                <TextView
                    android:id="@+id/emo_angry"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Angry"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/emo_aroused"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Aroused"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp" />

                <!-- Row 5 -->
                <TextView
                    android:id="@+id/emo_numb"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Numb"
                    android:textColor="#DDFFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/emo_rewarding"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_emotion_card"
                    android:gravity="center"
                    android:text="Rewarding Myself"
                    android:textColor="#DDFFFFFF"
                    android:textSize="12sp" />
            </GridLayout>
        </LinearLayout>

        <!-- ══ PHASE 2: Prompt + timer + suggestions ═════════════════════ -->
        <LinearLayout
            android:id="@+id/phase_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="28dp"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:visibility="gone">

            <!-- ACT prompt card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_pause_card"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_prompt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1A6B72"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_prompt_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Behavioural suggestions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="TRY THIS INSTEAD"
                android:textColor="#80FFFFFF"
                android:textSize="10sp"
                android:letterSpacing="0.15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_suggestion_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_suggestion_card"
                android:lineSpacingMultiplier="1.4"
                android:padding="14dp"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_suggestion_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_suggestion_card"
                android:lineSpacingMultiplier="1.4"
                android:padding="14dp"
                android:textColor="#CCFFFFFF"
                android:textSize="13sp" />

            <!-- Start Exercise button -->
            <Button
                android:id="@+id/btn_exercise"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#301A6B72"
                android:letterSpacing="0.1"
                android:text="START AN EXERCISE"
                android:textColor="#1A6B72"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Timer -->
            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_timer_circle">

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="60"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_timer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Take this time to pause."
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <!-- Action buttons (hidden until timer completes) -->
            <LinearLayout
                android:id="@+id/action_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_reflect"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:backgroundTint="#1A6B72"
                    android:letterSpacing="0.1"
                    android:text="REFLECT ON THIS MOMENT"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

                <Button
                    android:id="@+id/btn_stay_anchored"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#1AFFFFFF"
                    android:letterSpacing="0.1"
                    android:text="I'M STAYING ANCHORED"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</ScrollView>
